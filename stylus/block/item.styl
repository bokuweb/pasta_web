.item
  min-height 160px
  max-width 800px
  padding 20px 0 0 0
  border-bottom solid 1px #DDD

  .item__favicon
    margin 0 8px -2px 0

  .item__hatebu--image
    margin 0px 0 -2px 5px

  .item__title
    line-height 28px
    font-size 95%
    padding 0 0 3px

  .item__publish-date
    margin 5px 0 0 0
    font-size 10px
    color #95A5A6

  .item__category
   font-size 11px
   background #16A085
   padding 3px
   border-radius 2px
   line-height 11px
   color #fff
   font-weight bold
   display inline-block
   text-shadow none
   margin 0 0 0 10px

  .item__content-snippet
    color #7F8C8D
    font-size 90%
    padding 10px 0 10px 0
    //border-bottom solid 1px #DDD
    line-height 20px
    word-break break-all

@media screen and (max-width: 768px)
  .item
    min-height 130px
    max-width 100%
    padding 10px 5px 10px 5px
    border-bottom solid 1px #DDD

  .item__content-snippet
    display none
