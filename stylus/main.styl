@import 'font-style'
@import 'animate'

html, body, #pasta
  height 100%
  padding 0
  margin 0
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%
  background #f5f5f5
  font-family helvetica, "メイリオ", arial, 'hiragino kaku gothic pro', meiryo, 'ms pgothic', sans-serif

div,
input,
textarea
  font-family helvetica, "メイリオ", arial, 'hiragino kaku gothic pro', meiryo, 'ms pgothic', sans-serif  

input,
textarea,
select
  outline none

html,
a,
input,
textarea
  -webkit-font-smoothing  antialiased
  text-shadow  1px 1px 1px rgba(0, 0, 0, 0.004)
  color #ccc

li
  list-style none

a
  text-decoration none

#container
  height 100%
  width 100%
  display flex
  flex-direction row
  box-orient horizontal

#side-menu
  background #2980B9
  width 280px
  height 100%
  flex 0 280px
  box-flex 0
  padding 0
  font-size 14px
  overflow-y auto
  scrollbar-face-color accent-color
  scrollbar-track-color rgba(0, 0, 0, .1)

  #logo
    width 180px
    height auto
    margin 20px auto 0 30px

  #menu
    color #ECF0F1
    //border-top 1px solid #1970A9
    margin 20px 0 0 0

    ul
      padding 0

    li
      font-size 16px
      margin 5px 0 8px 0
      padding 0px 0 0px 60px
      line-height 32px
      border-radius 0 4px 4px 0
      width 200px
      transition  all .4s ease
      position relative

      height 32px

      a
        color #ffffff
        width 100%

      i
        font-size 12px
        margin -1px 30px 0 0

      span
        cursor pointer

      div.remove
        display none
        cursor pointer

    li.selected
      font-size 16px
      margin 5px 0 8px 0
      background #34495E
      padding 0 0 0 60px

    li:not(.selected):hover
      background #D35400

    li:hover > div.remove
      display inline-block
      position absolute
      left 230px

#side-menu::-webkit-scrollbar
  width 6px
  height 6px

#side-menu::-webkit-scrollbar-thumb
  background rgba(0, 0, 0, 0.4)
  border-radius 2px

div.add-keyword
  margin 0 0 46px 20px
  display -webkit-flex
  display flex
  -webkit-flex-direction row
  flex-direction         row

  input
    border 0
    border solid 1px #2C3E50
    background #34495E
    opacity 0.9
    padding 0 10px
    color #f5f5f5
    border-radius 3px
    margin 0 5px 0 0
    -moz-box-shadow inset 0 0 4px rgba(0,0,0,0.1)
    -webkit-box-shadow inset 0 0 4px rgba(0, 0, 0, 0.1)
    box-shadow inner 0 0 4px rgba(0, 0, 0, 0.1)
    height 26px
    line-height 26px
    font-size 14px
    width 140px

div.slider
  width 100%
  margin 0 auto
  position relative
  padding 15px 0 0 0

  div[name="slider"]
    width 70%
    margin 0 0 0 15%

  .bookmark-filter
    background #34495E
    color #f5f5f5
    padding 8px
    width 40px
    position absolute
    top 0
    left 10px
    border-radius 4px
    text-align center
    vertical-align middle

    i
      color #f5f5f5
      margin 0 2px -2px 0
      display inline-block

  .bookmark-filter:after
    content ''
    position absolute
    border-top 10px solid #34495E
    border-right 5px solid transparent
    border-left 5px solid transparent
    bottom -9px
    left 20px

#content
  flex 1
  box-flex 1
  text-shadow -1px 1px 0 rgba(255, 255, 255, 1)
  color #7F8C8D
  width 100%
  min-height 100%

  a
    color #34495E

  .favicon
    margin 0 8px -2px 0

  a.hatebu img
    margin 0px 0 -2px 5px

  a.item-title
    line-height 28px
    font-size 95%
    padding 0 0 3px

#content > div::-webkit-scrollbar
  width 6px
  height 6px

#content > div::-webkit-scrollbar-thumb
  background #34495E
  border-radius 2px

.item
  min-height 140px
  max-width 800px
  padding 20px 0 0 0

  .publish-date
    margin 5px 0 0 0
    font-size 10px
    color #95A5A6

  .category
   font-size 11px
   background #16A085
   padding 3px
   border-radius 2px
   line-height 11px
   color #fff
   font-weight bold
   display inline-block
   text-shadow none
   margin 0 0 0 10px

  .content-snippet
    color #7F8C8D
    font-size 90%
    padding 10px 0 30px 0
    border-bottom solid 1px #DDD
    line-height 20px
    word-break break-all

.items
  padding 20px 30px 0 50px
  height 100%

@media screen and (max-device-width: 768px)
  #side-menu
    position absolute
    left -800px

@media screen and (min-device-width: 769px)
  #content
    overflow-y auto
    max-height 100%
    width 100%

.rect-spinner
  width 40px
  height 40px
  background-color #3498DB

  margin 100px auto
  -webkit-animation rect-sk-rotateplane 1.2s infinite ease-in-out
  animation rect-sk-rotateplane 1.2s infinite ease-in-out

@-webkit-keyframes rect-sk-rotateplane
  0%  -webkit-transform perspective(120px)
  50%  -webkit-transform perspective(120px) rotateY(180deg)
  100%  -webkit-transform perspective(120px) rotateY(180deg)  rotateX(180deg)


@keyframes rect-sk-rotateplane
  0%
    transform perspective(120px) rotateX(0deg) rotateY(0deg)
    -webkit-transform perspective(120px) rotateX(0deg) rotateY(0deg)
  50%
    transform perspective(120px) rotateX(-180.1deg) rotateY(0deg)
    -webkit-transform perspective(120px) rotateX(-180.1deg) rotateY(0deg)
  100%
    transform perspective(120px) rotateX(-180deg) rotateY(-179.9deg)
    -webkit-transform perspective(120px) rotateX(-180deg) rotateY(-179.9deg)



