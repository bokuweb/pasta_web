html, body, #pasta
  height 100%
  padding 0
  margin 0
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%
  background #f5f5f5
  font-family Roboto, "Droid Sans", YuGothic, "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", "メイリオ", Meiryo, sans-serif

input,
textarea,
select
  outline none

html,
a,
input,
textarea
  -webkit-font-smoothing  antialiased
  text-shadow  1px 1px 1px rgba(0, 0, 0, 0.004)
  color #ccc

a
  text-decoration none

#container
  height 100%
  width 100%
  display flex
  flex-direction row
  box-orient horizontal

#side-menu
  background #2980B9
  /*background #2980B9 */
  /* #3498DB*/
  width 300px
  height 100%
  flex 0 300px
  box-flex 0
  padding 0

#content
  flex 1
  box-flex 1
  text-shadow -1px 1px 0 rgba(255, 255, 255, 0.5)
  color #7F8C8D
  width 100%

  a
    color #34495E

  .favicon
    margin 0 8px -2px 0

  a.hatebu img
    margin 0px 0 -2px 5px

  a.item-title
    line-height 20px

.item
  min-height 180px
  max-width 800px
  padding 20px 0 0 0

  p.publish-date
    margin 5px 0 0 0
    font-size 10px
    color #BDC3C7

  .content-snippet
    color #7F8C8D
    padding 20px 0 40px 0
    border-bottom solid 1px #DDD

.items
  padding 40px 30px 0 30px

@media screen and (max-width: 768px)
  #container
    flex-direction column
    box-orient vertical

  #side-menu
    width 100%
    flex 0 100%
    height 100px

@media screen and (min-width: 769px)
  #content
    overflow-y auto
    max-height 100%
    width 100%